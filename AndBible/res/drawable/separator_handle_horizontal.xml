<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- the only difference between selected and non-selected is the alpha part of the colour -->
	<item android:state_pressed="true">
	    <shape android:shape="rectangle">
			<solid android:color="#FF6B6B6B"/>
			<corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" />
			<padding android:left="10dp" android:top="10dp" android:right="10dp"/>
	    </shape>
	</item>
	<item>
		<shape android:shape="rectangle">
		    <solid android:color="#886B6B6B"/>
		    <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" />
	        <padding android:left="10dp" android:top="10dp" android:right="10dp"/>
	    </shape>
	</item>
</selector>
